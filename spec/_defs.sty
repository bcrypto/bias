\newcommand{\req}[2]{
	\addtocounter{reqctr}{1}
	\def\@currentlabel{#1.\thereqctr}
	{\bf Требование~#1.\thereqctr~(#2)}.\;\xspace
}

\newcommand{\forref}[1]{\{\ref{#1}\}}
